<section>
  <h2>Edit article
    <div class="controls">
      {{#if isAdmin}}
        <a href="/article/lock/{{this._id}}">Lock article</a>
        <a href="/article/unlock/{{this._id}}">Unlock article</a>
      {{/if}}
    </div>
  </h2>
  <div class="spacer">
    <form action="/article/edit/{{this._id}}" method="POST">
      <label>Article title</label>
      <h3>{{this.title}}</h3>
      <label for="content">Content</label>
      <textarea id="content" name="content">{{this.content}}</textarea>
      <input type="submit" value="Submit">
    </form>
  </div>
</section>