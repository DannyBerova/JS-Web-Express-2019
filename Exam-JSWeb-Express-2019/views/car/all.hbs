<form id="search-form" action="/search">
    <!--Chosse criteria for searching-->
    <input type="text" name="model">
    <input class="submit-btn" type="submit" value="Search" />
</form>
<div id="container">
    {{#each cars}}
    <div class="car">
        <h2>{{model}}</h2>
        <img src="{{image}}" alt="car">
        <h2 class="price">Price per day: {{pricePerDay}} &euro;</h2>

        {{#if ../user}}
            {{#if this.isRented}}
                <a class="rent-btn" href="#">Busy</a>
            {{else}}
                <a class="rent-btn" href="/car/rent/{{_id}}">Rent</a>
            {{/if}}
        {{/if}}

        {{#if ../isAdmin}}
        <a class="edit-btn" href="/car/edit/{{_id}}">Edit</a>
            {{#if outOfOrder}}
            <a class="edit-btn" href="/car/in/{{_id}}">In Order</a>
            {{else}}
            <a class="edit-btn" href="/car/out/{{_id}}">Out of Order</a>
            {{/if}}
        {{/if}}
    </div>
    {{else}}
    {{#if empty}} 
    <div><h1>{{empty}}</h1></div>
    {{else}}
    <div><h1>No cars available in this criteria! Search other.</h1></div>
    <div><a href="/car/all">View Avaliable Cars</a></div>
    {{/if}}
    {{/each}}
</div>