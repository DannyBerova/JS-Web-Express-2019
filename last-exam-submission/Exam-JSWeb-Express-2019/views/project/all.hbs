<h1>Projects</h1>
<form class="search" action="/project/search" method="GET">
  <label>Search: </label>
  <input type="text" name="text">
  <input type="submit" value="Search">
</form>
<div class="projects">
  {{#each projects}}
  <div class="project">
    <h2>{{name}}</h2>
    {{#if this.team}}
    <h3>Team: {{team.name}}</h3>
    <p>Description: {{description}}</p>
    {{else}}
    <h3>Team: No Team assigned}</h3>
    {{/if}}
  </div>
  {{else}}
  <div>
    <h1>No projects found! Search other.</h1>
  </div>
  <div><a href="/project/all">View All Projects</a></div>
  {{/each}}